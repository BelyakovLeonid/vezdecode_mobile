<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">10dp</item>
        <item name="chipIconSize">16dp</item>
        <item name="iconStartPadding">8dp</item>
        <item name="chipStrokeColor">@color/colorGrayChips</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/c_button_background</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GreenButton" parent="ButtonStyle">
        <item name="backgroundTint">@color/c_green_button_background</item>
    </style>


    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/c_button_background</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/c_button_background</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PageTitleStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="MainTitleStyle" parent="PageTitleStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextStyle" parent="NormalTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTextStyle" parent="NormalTextStyle">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/colorGraySecondary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BlueTextStyle" parent="HintTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>